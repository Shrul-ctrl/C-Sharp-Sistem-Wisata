@model IEnumerable<sistem_wisata.Models.Kategori>

@{
    ViewData["Title"] = "Kategori";
}

<h3>Kategori Destinasi Wisata</h3>
<hr>
<div class="card">
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <a asp-action="Create" class="btn btn-primary mb-3">Buat Data Baru</a>
        <table id="example" class="table" style="width:100%">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Kategori</th>
                    @* <th>Created At</th>
                    <th>Updated At</th> *@
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nama_Kategori)
                        </td>
                        @* <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdatedAt)
                        </td> *@
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">
                                <i class="material-icons-outlined fs-5" data-bs-toggle="tooltip" data-bs-placement="left" title="Edit Data">edit</i>
                            </a> |
                            <a asp-action="Details" asp-route-id="@item.Id">
                                <i class="material-icons-outlined fs-5" data-bs-toggle="tooltip" data-bs-placement="left" title="Detail Data">visibility</i>
                            </a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">
                                <i class="material-icons-outlined fs-5" data-bs-toggle="tooltip" data-bs-placement="left" title="Hapus Data">delete</i>
                            </a>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>
</div>
